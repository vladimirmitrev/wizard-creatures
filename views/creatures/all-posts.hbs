
<section id="catalog">
    <h1>All posts</h1>
    <div class="band">

        <!-- If there are posts for creature in the database display each of them -->
        {{#each creatures}}
        <div class="flip flip-vertical">
            <div class="front">
                <img src="{{image}}"
                    alt="image">
            </div>
            <div class="back">
                <h1>{{name}}</h1>
                <h2>Species: {{species}}</h2>
                <p>Description: {{description}} </p>
                <a href="/creatures/{{_id}}/details" class="details">Details</a>
            </div>
        </div>
        {{else}}
        <div class="no-posts">
            <p class="no-offer">There are no posts yet...</p>
        </div>
        {{/each}}
    </div>
</section>